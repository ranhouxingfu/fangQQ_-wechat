.section {
  width: 100%;
  height: 100%;
}

.music_list_box {
  display: flex;
  padding: 5px 15px;
  border-bottom: 1px solid #f1f1f1;
}

.music_list_left {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.music_list_left .music_singer {
  font-family: "微软雅黑";
  color: #808080;
  font-size: 12px;
}

.opened {
  display: block;
  position: fixed;
  z-index: 999;
  bottom: 0;
}

.closed {
  display: none;
}

.music-right-image image {
  width: 25px;
  height: 25px;
}

.music-right-image {
  display: flex;
  align-items: center;
}
